<brls:AppletFrame
  iconInterpolation="linear"
  headerHidden="true"
  footerHidden="false">

  <brls:Box
    axis="column"
    width="100%"
    height="100%">

    <AutoTabFrame
      grow="1"
      tabBackgroundColor="@theme/color/grey1"
      tabItemActiveTextColor="@theme/color/main">

      <!-- Home Tab -->
      <Tab label=""
        fontSize="18"
        icon="@res/svg/home_tab.svg"
        iconActivate="@res/svg/home_tab.svg">
        <HomeTab />
      </Tab>

      <!-- Music Tab -->
      <Tab label=""
        fontSize="18"
        icon="@res/svg/music_tab.svg"
        iconActivate="@res/svg/music_tab.svg">
        <MusicTab />
      </Tab>

      <!-- Video Tab -->
      <Tab label=""
        fontSize="18"
        icon="@res/svg/video_tab.svg"
        iconActivate="@res/svg/video_tab.svg">
        <VideoTab />
      </Tab>

      <!-- Browser Tab -->
      <Tab label=""
        fontSize="18"
        icon="@res/svg/browser_tab.svg"
        iconActivate="@res/svg/browser_tab.svg">
        <BrowserTab />
      </Tab>

      <!-- Settings Tab -->
       <Tab label=""
         fontSize="18"
         icon="@res/svg/settings_tab.svg"
         iconActivate="@res/svg/settings_tab.svg">
        <SettingsTab />
      </Tab>

    </AutoTabFrame>

  </brls:Box>

</brls:AppletFrame>
