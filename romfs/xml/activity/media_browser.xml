<brls:AppletFrame
  iconInterpolation="linear"
  headerHidden="true"
  footerHidden="false">

  <brls:Box
    axis="column"
    width="auto"
    height="auto">

    <brls:Box
      width="auto"
      height="auto"
      padding="20px">

      <brls:Label
        id="view/browser/path_label"
        fontSize="15"
        text="path_label"/>

    </brls:Box>

    <RecyclerFrame
      id="frame/content"
      grow="1"
      spanCount="5"
      padding="30px"
      width="auto"
      itemHeight="200px"
      height="auto" />

  </brls:Box>

</brls:AppletFrame>
