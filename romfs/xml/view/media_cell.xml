<brls:Box
  id="view/media_cell/root"
  highlightCornerRadius="8"
  axis="column">

  <brls:Image
    id="view/media_cell/image"
    backgroundColor="@theme/color/grey_1"
    scalingType="fill"
    width="100%"
    height="auto"
    cornerRadius="0"/>

  <brls:Box
    id="view/media_cell/shadow"
    positionBottom="0"
    positionType="absolute"
    background="vertical_linear"
    paddingLeft="10"
    paddingRight="10"
    width="100%"
    height="100%"
    alignItems="center"/>

    <brls:Box
      axis="column"
      height="20%"
      alignItems="center"
      backgroundColor="#353535">

      <brls:Label
        id="view/media_cell/title"
        wireframe="false"
        fontSize="15"
        marginTop="5"
        text="title"/>
      <brls:Label
        id="view/media_cell/subtitle"
        wireframe="false"
        fontSize="12"
        marginTop="5"
        text="subtitle"/>

    </brls:Box>


</brls:Box>
