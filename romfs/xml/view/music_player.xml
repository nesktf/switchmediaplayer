<brls:Box
  width="100%"
  height="100%"
  axis="column"
  justifyContent="spaceBetween"
  alignItems="center">

  <brls:Box
    axis="column"
    width="auto"
    height="auto">

    <brls:Box
      axis="row"
      width="auto"
      height="80%">

      <brls:Box
        axis="column"
        width="65%"
        height="auto"
        alignItems="center"
        justifyContent="center">

        <brls:Image
          id="music_player/cover"
          scalingType="fit"
          height="70%"
          image="@res/img/cover_test0.jpg"/>

        <brls:Box
          axis="column"
          width="auto"
          padding="15px"
          alignItems="center"
          height="auto">

          <brls:Label
            id="music_player/title"
            fontSize="18"
            text="current_song"/>
          
         <brls:Label
            id="music_player/artist"
            fontSize="15"
            text="current_artist"/>

        </brls:Box>

      </brls:Box>

      <brls:Box
        axis="column"
        width="35%"
        height="auto"
        justifyContent="center">

        <brls:Label
          text="queue_contents" />

      </brls:Box>

    </brls:Box>

    <brls:Box
      id="music_player/controls_container"
      axis="row"
      width="auto"
      height="auto"
      alignItems="center"
      justifyContent="center" />

  </brls:Box>

</brls:Box>
