<brls:Box
  width="auto"
  height="auto"
  axis="column"
  justifyContent="spaceBetween"
  alignItems="center">

  <brls:Box
    axis="column"
    width="auto"
    height="auto">
  
    <brls:Box
      axis="row"
      width="auto"
      height="30%"
      alignItems="center"
      justifyContent="center">

      <brls:Box
        axis="row"
        width="70%"
        height="auto"
        padding="20px">

        <brls:Image
          id="album_browser/cover"
          image="@res/img/cover_test0.jpg"/>

        <brls:Box
          axis="column"
          width="auto"
          height="auto"
          paddingTop="20px"
          paddingLeft="20px">
          <brls:Label
            id="album_browser/title"
           fontSize="18" />
          <brls:Label
            id="album_browser/artists"
           fontSize="15" />
          <brls:Label
            id="album_browser/length"
            fontSize="15"/>
          <brls:Label
            id="album_browser/music_count"
            fontSize="15" />
        </brls:Box>

      </brls:Box>

      <brls:Box
        axis="row"
        width="auto"
        padding="20px">

        <brls:Label
          text="album_buttons"/>

      </brls:Box>

    </brls:Box>

  <brls:Box
    width="100%"
    height="70%" >

    <RecyclerFrame
      id="album_browser/content"
      grow="1"
      wireframe="false"
      paddingLeft="30"
      paddingRight="30"
      spanCount="1"
      itemHeight="35"
      itemSpace="5"
      focusable="true" />

  </brls:Box>

  </brls:Box>


</brls:Box>
