<brls:Box
  width="100%"
  height="100%"
  axis="column"
  justifyContent="spaceBetween"
  alignItems="center">

  <brls:Box
    axis="column"
    width="auto"
    height="auto">
  
    <brls:Box
      axis="row"
      width="auto"
      height="30%"
      alignItems="center"
      justifyContent="center">

      <brls:Box
        axis="row"
        width="70%"
        height="auto"
        padding="20px">

        <brls:Image
          id="album_browser/cover"
          image="@res/img/cover_test0.jpg"/>

        <brls:Box
          axis="column"
          width="auto"
          height="auto"
          paddingTop="20px"
          paddingLeft="20px">
          <brls:Label
            id="album_browser/title"
           fontSize="18" />
          <brls:Label
            id="album_browser/artists"
           fontSize="15" />
          <brls:Label
            id="album_browser/length"
            fontSize="15"/>
          <brls:Label
            id="album_browser/music_count"
            fontSize="15" />
        </brls:Box>

      </brls:Box>

      <brls:Box
        axis="row"
        width="auto"
        padding="20px">

        <brls:Label
          text="album_buttons"/>

      </brls:Box>

    </brls:Box>

    <brls:Box
      axis="column"
      width="auto"
      height="auto"
      alignItems="center"
      paddingTop="20px">
      
      <brls:ScrollingFrame
        width="90%"
        height="70%"
        grow="1.0">
        <brls:Box
          id="album_browser/content_frame"
          width="auto"
          height="auto"
          axis="column" />
      </brls:ScrollingFrame>

    </brls:Box>

  </brls:Box>

</brls:Box>
