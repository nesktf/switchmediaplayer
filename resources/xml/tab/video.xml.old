<brls:Box
    width="auto"
    height="auto">

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingLeft="@style/brls/tab_frame/content_padding_sides"
            paddingRight="@style/brls/tab_frame/content_padding_sides"
            paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
            paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

            <brls:Header
                id="tab/video/header"
                width="auto"
                height="auto"
                title="@i18n/main/tab/video/header"
                marginBottom="10px" />
            <brls:Box
                width="auto"
                height="auto"
                alignItems="stretch">
                <RecyclerFrame
                    id="tab/video/content_frame"
                    width="100%"
                    height="100%"
                    itemHeight="200"
                    spanCount="5"/>
            </brls:Box>

        </brls:Box>

</brls:Box>
