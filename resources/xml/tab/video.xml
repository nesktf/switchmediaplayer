<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        marginTop="0"
        grow="1.0">

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingLeft="@style/brls/tab_frame/content_padding_sides"
            paddingRight="@style/brls/tab_frame/content_padding_sides"
            paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
            paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

            <brls:Header
                id="tab/video/content_header"
                width="auto"
                height="auto"
                title="@i18n/main/tab/video/content_header"
                marginBottom="10px" />
            <HRecyclerFrame
                id="tab/video/content_frame"
                width="auto"
                height="135"
                itemWidth="200"/>

            <brls:Header
                id="tab/video/recent_header"
                width="auto"
                height="auto"
                title="@i18n/main/tab/video/recent_header"
                marginBottom="10px" />
            <HRecyclerFrame
                id="tab/video/recent_frame"
                width="auto"
                height="200"
                itemWidth="200"/>
        </brls:Box>

    </brls:ScrollingFrame>
</brls:Box>
